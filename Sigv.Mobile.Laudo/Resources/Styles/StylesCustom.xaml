<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="CustomButtonPage" TargetType="Button">
        <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
        <Setter Property="TextColor" Value="{StaticResource Secondary-Light}"/>
        <Setter Property="BackgroundColor" Value="{StaticResource Tertiary}"/>
        <Setter Property="Margin" Value="2"/>
    </Style>

    <Style x:Key="HomeListItem" TargetType="Frame">
        <Setter Property="CornerRadius" Value="3" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Margin" Value="2,5,7,8" />
        <Setter Property="BackgroundColor" Value="#eee" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BorderColor" Value="Transparent" />
        <Setter Property="Margin" Value="20, 12" />
    </Style>

</ResourceDictionary>
