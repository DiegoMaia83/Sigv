<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sigv.Mobile.Laudo.Views.Laudos.PageLaudo" 
             x:Name="bindingContextLaudoVeculo"
             Title="PageLaudo">
    <StackLayout Padding="20">
        
        <StackLayout>
            <Label x:Name="lbPlaca" Text="" FontSize="20" FontAttributes="Bold" />
            <Label x:Name="lbMarca" Text="" />
            <Label x:Name="lbAno" Text=""/>
        </StackLayout>  
        
        <StackLayout Orientation="Horizontal" >
            <Button Text="Avarias" HorizontalOptions="FillAndExpand" BackgroundColor="{StaticResource Tertiary}" Margin="2" Clicked="ButtonAvarias_Clicked"/>
            <Button Text="Opcionais" HorizontalOptions="FillAndExpand" BackgroundColor="{StaticResource Tertiary}" Margin="2"/>            
        </StackLayout>

        <StackLayout Orientation="Horizontal" >
            <Button Text="Avaliação" HorizontalOptions="FillAndExpand" BackgroundColor="{StaticResource Tertiary}" Margin="2"/>
            <Button Text="Fotos" HorizontalOptions="FillAndExpand" BackgroundColor="{StaticResource Tertiary}" Margin="2"/>
        </StackLayout>

    </StackLayout>
</ContentPage>