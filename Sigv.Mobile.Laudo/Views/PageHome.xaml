<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sigv.Mobile.Laudo.Views.PageHome"
             Title="PageHome">
    <StackLayout Padding="20">

        <ListView x:Name="listViewVeiculos" HasUnevenRows="True" ItemSelected="listViewVeiculos_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding VeiculoId}" />                            
                            <Label Text="{Binding Placa}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackLayout>
            <Button x:Name="listarLaudosPendentes" CommandParameter="0" Text="Pendentes" Clicked="ListarVeiculosLaudos_Clicked"/>
            <Button x:Name="listarLaudosAbertos" CommandParameter="1" Text="Abertos" Clicked="ListarVeiculosLaudos_Clicked"/>
            <Button x:Name="listarLaudosFinalizados" CommandParameter="2" Text="Finalizados" Clicked="ListarVeiculosLaudos_Clicked"/>            
        </StackLayout>

    </StackLayout>
</ContentPage>